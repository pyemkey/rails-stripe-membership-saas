%h3 Users

%table.table.table-condensed 
  %thead 
    %tr 
      %th Username
      %th Email
      %th Registered 
      %th Role
      %th 
      %th 
  %tbody 
    - @users.each do |user|
      %tr 
        %td= user.name
        %td= user.email 
        %td= user.created_at
        %td= user.roles.first.name.titleize
        %td 
          %a.btn.btn-xs.btn-primary{'data-toggle'=>"modal", href:"#role-options-#{user.id}"} Change a role
          = render user
        %td= link_to("Delete User", user_path(user), method: :delete, confirm: "Are you sure?", class: "btn btn-mini") unless user == current_user
